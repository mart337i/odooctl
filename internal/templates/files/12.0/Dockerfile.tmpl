FROM debian:buster-slim
SHELL ["/bin/bash", "-xo", "pipefail", "-c"]

ENV LANG=C.UTF-8

ARG TARGETARCH

# Use archived Debian repositories (Buster is EOL)
RUN echo "deb http://archive.debian.org/debian buster main" > /etc/apt/sources.list && \
    echo "deb http://archive.debian.org/debian-security buster/updates main" >> /etc/apt/sources.list && \
    echo 'Acquire::Check-Valid-Until "false";' > /etc/apt/apt.conf.d/99no-check-valid-until

RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        dirmngr \
        fonts-noto-cjk \
        gnupg \
        libssl-dev \
        node-less \
        npm \
        postgresql-client \
        python3-babel \
        python3-dateutil \
        python3-decorator \
        python3-docutils \
        python3-feedparser \
        python3-html2text \
        python3-jinja2 \
        python3-libsass \
        python3-lxml \
        python3-mako \
        python3-mock \
        python3-num2words \
        python3-ofxparse \
        python3-openssl \
        python3-passlib \
        python3-pil \
        python3-pip \
        python3-polib \
        python3-psutil \
        python3-psycopg2 \
        python3-pydot \
        python3-pyparsing \
        python3-pypdf2 \
        python3-qrcode \
        python3-reportlab \
        python3-requests \
        python3-serial \
        python3-setuptools \
        python3-stdnum \
        python3-suds \
        python3-usb \
        python3-vatnumber \
        python3-vobject \
        python3-werkzeug \
        python3-xlrd \
        python3-xlsxwriter \
        python3-xlwt \
        python3-zeep \
        xz-utils && \
    if [ -z "${TARGETARCH}" ]; then \
        TARGETARCH="$(dpkg --print-architecture)"; \
    fi; \
    WKHTMLTOPDF_ARCH=${TARGETARCH} && \
    case ${TARGETARCH} in \
    "amd64") WKHTMLTOPDF_ARCH=amd64 ;; \
    "arm64") WKHTMLTOPDF_ARCH=arm64 ;; \
    esac \
    && curl -o wkhtmltox.deb -sSL https://github.com/wkhtmltopdf/packaging/releases/download/0.12.6-1/wkhtmltox_0.12.6-1.buster_${WKHTMLTOPDF_ARCH}.deb \
    && apt-get install -y --no-install-recommends ./wkhtmltox.deb \
    && rm -rf /var/lib/apt/lists/* wkhtmltox.deb

RUN npm install -g rtlcss

ENV ODOO_VERSION={{.OdooVersion}}
ARG ODOO_RELEASE=latest
ARG ODOO_SHA=skip
RUN if [ "$ODOO_RELEASE" = "latest" ]; then \
        ODOO_RELEASE=$(curl -s https://nightly.odoo.com/${ODOO_VERSION}/nightly/deb/ | grep -oE "odoo_${ODOO_VERSION}\.[0-9]+_all\.deb" | sort -V | tail -1 | sed "s/odoo_${ODOO_VERSION}\.\(.*\)_all\.deb/\1/"); \
    fi && \
    curl -o odoo.deb -sSL http://nightly.odoo.com/${ODOO_VERSION}/nightly/deb/odoo_${ODOO_VERSION}.${ODOO_RELEASE}_all.deb && \
    if [ "$ODOO_SHA" != "skip" ]; then \
        echo "${ODOO_SHA} odoo.deb" | sha1sum -c -; \
    fi && \
    apt-get update && \
    apt-get -y install --no-install-recommends ./odoo.deb && \
    rm -rf /var/lib/apt/lists/* odoo.deb

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    vim \
    htop \
    openssh-client \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install --no-cache-dir \
    debugpy \
    ipython{{if .PipPackages}} \
    {{.PipPackages}}{{end}}

{{if .Enterprise}}
# Clone Odoo Enterprise
{{if .EnterpriseGitHubToken}}
# Using GitHub Personal Access Token
RUN git clone --depth 1 --branch {{.OdooVersion}} \
    https://{{.EnterpriseGitHubToken}}@github.com/odoo/enterprise.git /mnt/enterprise && \
    chown -R odoo:odoo /mnt/enterprise && \
    chmod -R 755 /mnt/enterprise
{{else if .EnterpriseSSHKeyPath}}
# Using specific SSH key (mounted as build secret)
RUN --mount=type=secret,id=enterprise_ssh_key bash -c 'mkdir -p /root/.ssh && \
    ssh-keyscan github.com >> /root/.ssh/known_hosts && \
    cp /run/secrets/enterprise_ssh_key /root/.ssh/id_enterprise && \
    chmod 600 /root/.ssh/id_enterprise && \
    GIT_SSH_COMMAND="ssh -i /root/.ssh/id_enterprise" \
    git clone --depth 1 --branch {{.OdooVersion}} \
    git@github.com:odoo/enterprise.git /mnt/enterprise && \
    rm /root/.ssh/id_enterprise' && \
    chown -R odoo:odoo /mnt/enterprise && \
    chmod -R 755 /mnt/enterprise
{{else}}
# Using SSH agent
RUN --mount=type=ssh bash -c 'mkdir -p /root/.ssh && ssh-keyscan github.com >> /root/.ssh/known_hosts && \
    git clone --depth 1 --branch {{.OdooVersion}} \
    git@github.com:odoo/enterprise.git /mnt/enterprise' && \
    chown -R odoo:odoo /mnt/enterprise && \
    chmod -R 755 /mnt/enterprise
{{end}}
{{end}}

COPY ./entrypoint.sh /
COPY ./wait-for-psql.py /usr/local/bin/wait-for-psql.py

RUN mkdir -p /etc/odoo \
    && echo "[options]" > /etc/odoo/odoo.conf \
    && useradd -ms /bin/bash odoo || true \
    && chown odoo /etc/odoo/odoo.conf \
    && mkdir -p /mnt/extra-addons \
    && chown -R odoo /mnt/extra-addons \
    && mkdir -p /var/lib/odoo/.local/share/Odoo/sessions \
    && mkdir -p /var/lib/odoo/filestore \
    && chown -R odoo:odoo /var/lib/odoo \
    && chmod -R 755 /var/lib/odoo \
    && chmod +x /entrypoint.sh \
    && chmod +x /usr/local/bin/wait-for-psql.py

VOLUME ["/var/lib/odoo", "/mnt/extra-addons"]

EXPOSE 8069 8071 8072 5678

ENV ODOO_RC=/etc/odoo/odoo.conf

USER odoo

WORKDIR /mnt/extra-addons

ENTRYPOINT ["/entrypoint.sh"]
CMD ["odoo"]
